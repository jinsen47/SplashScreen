<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="match_parent"  
    android:layout_height="wrap_content"  
    android:orientation="vertical" 
    android:descendantFocusability="blocksDescendants"
   >  
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
  <!-- 添加竖线 -->
    <View  style="@style/listview_vertical"/> 
    <ImageView 
        android:id="@+id/taskflag"
        android:layout_height="wrap_content"
        android:layout_width="15dip"
        android:layout_gravity="center_vertical"
        android:src="@drawable/star_white"
        android:focusable="false"/> 
    <TextView  
        android:id="@+id/task_no"  
        android:layout_width="60dip"  
        android:layout_height="40dip"  
        style="@style/listview_textstyle"/>  
  
  	<View  style="@style/listview_vertical"/>  
    <TextView  
        android:id="@+id/powerStation"  
        android:layout_width="100dip"  
        android:layout_height="wrap_content"  
        style="@style/listview_textstyle"/>  
  
    <View  style="@style/listview_vertical"/>  
    <TextView  
        android:id="@+id/tg_name"  
        android:layout_width="100dip"  
        android:layout_height="wrap_content"  
       style="@style/listview_textstyle"/>  
  
    <View  style="@style/listview_vertical"/>  
    <TextView  
        android:id="@+id/faultCode"  
        android:layout_width="150dip"  
        android:layout_height="wrap_content"  
        style="@style/listview_textstyle"/>  
  
        <View  style="@style/listview_vertical"/>  
       <TextView  
        android:id="@+id/buildDate"  
        android:layout_width="100dip"  
        android:layout_height="wrap_content"  
        style="@style/listview_textstyle"/> 
       <View  style="@style/listview_vertical"/>   
	</LinearLayout>  
    <View  style="@style/listview_horizontal"/>   
</LinearLayout>