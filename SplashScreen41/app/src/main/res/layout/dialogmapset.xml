<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal">
    <!-- mydialog message部分自定义 -->
       <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/mapLinear1"
        android:orientation="horizontal">
        <TextView 
            android:id = "@+id/city_textview"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="城市"
            android:textColor="#FFFFFF"/>
        <EditText 
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:id="@+id/city_name"
            android:textSize="15sp"
            android:text = ""/>
          <Button
            android:id = "@+id/exchangeBtn"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="互换"
            android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/mapLinear2"
        android:orientation="horizontal"> 
        <TextView 
            android:id = "@+id/locfirst_textview"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="初始地点"
            android:textColor="#FFFFFF"/>
        <EditText 
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:id="@+id/loc_first_name"
            android:textSize="15sp"
            android:hint="我的位置"/>
    </LinearLayout>	
      <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/mapLinear3"
        android:orientation="horizontal"> 
        <TextView 
            android:id = "@+id/loc_end_textview"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="目的地点"
            android:textColor="#FFFFFF"/>
        <EditText 
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:id="@+id/loc_end_name"
            android:textSize="15sp"
            android:hint=""/>
    </LinearLayout>	
     
      
      
</LinearLayout>
