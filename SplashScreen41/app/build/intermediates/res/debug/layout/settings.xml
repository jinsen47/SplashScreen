<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#B8FFE3"
    android:paddingLeft="20dip"
    android:paddingRight="20dip"
    android:paddingTop="20dip">
    <Button 
        android:id="@+id/universe_setting"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:text="网络设置"
        android:paddingTop="8dip"
        style="@style/rightfragment_textstyle"/>
    <Button 
        android:id="@+id/aboutMe"
        android:layout_below="@id/universe_setting"
        android:layout_marginTop="5dip"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:text="关于软件"
        style="@style/rightfragment_textstyle"/>
    
    <Button 
        android:id="@+id/check_new"
        android:layout_marginTop="5dip"
        android:layout_below="@id/aboutMe"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:text="检查新版本"
        style="@style/rightfragment_textstyle"/>

    <Button
        android:id="@+id/logout"
        android:layout_below="@id/check_new"
        android:layout_marginTop="5dip"
        style="@style/rightfragment_textstyle1"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="#FF83FA"
        android:text="退出登录" />

</RelativeLayout>
