<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <TextView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:text="用户登陆"
      android:textSize="25sp"
      android:textColor="#006f68"
      />
     <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="100dip"
        android:background="@drawable/corner_round" >
        <LinearLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="20dip" 
            android:orientation="horizontal"
            >
        <TextView 
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="账   号:"
            />
        <AutoCompleteTextView 
            android:id="@+id/cardNumAuto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/layout_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_top"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip" 
        android:orientation="horizontal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="密   码:"
       />
        <EditText 
            android:id="@+id/passwordET"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/layout_center_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_center"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" 
            android:paddingTop="20dip"
            android:orientation="horizontal">
        <CheckBox 
            android:id="@+id/savePasswordCB"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="保存"
            android:textSize="13sp"/>
        <Button
            android:id="@+id/login_setting"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="设置"/>
        <Button
            android:id="@+id/login"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="登录"/>
   </LinearLayout>
   
  </RelativeLayout>  
  <ImageView 
       android:layout_gravity="right"
       android:paddingTop="30dip"
       android:paddingRight="15dip"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/logo2"/>
</LinearLayout><!-- From: file:/G:/Projects/SplashScreen41/app/src/main/res/layout/login.xml -->